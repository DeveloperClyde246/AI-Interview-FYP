<h2>Recruiter Dashboard</h2>
<p>Welcome, <%= username %>!</p>

<!-- Notifications -->
<h3>Notifications</h3>
<ul>
  <% if (notifications.length === 0) { %>
    <li>No new notifications</li>
  <% } else { %>
    <% notifications.forEach(notification => { %>
      <li><%= notification.message %> - <%= notification.status === "unread" ? "ðŸ””" : "âœ…" %></li>
    <% }) %>
  <% } %>
</ul>

<!-- Interviews -->
<h3>Your Scheduled Interviews</h3>
<table border="1">
  <tr>
    <th>Candidate</th>
    <th>Scheduled Date</th>
    <th>Status</th>
  </tr>
  <% if (interviews.length === 0) { %>
    <tr><td colspan="3">No scheduled interviews</td></tr>
  <% } else { %>
    <% interviews.forEach(interview => { %>
      <tr>
        <td><%= interview.candidateId.name %> (<%= interview.candidateId.email %>)</td>
        <td><%= new Date(interview.scheduled_date).toLocaleString() %></td>
        <td><%= interview.status %></td>
      </tr>
    <% }) %>
  <% } %>
</table>

